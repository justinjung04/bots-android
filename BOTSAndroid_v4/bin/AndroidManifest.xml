<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.botsandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="21" />
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/text_game_title"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        
        <activity
            android:name="com.example.botsandroid.ActivityMain" 
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.example.botsandroid.ActivityGame"
            android:parentActivityName="com.example.botsandroid.ActivityMain" 
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.botsandroid.Main" />
        </activity>
        
        <activity
            android:name="com.example.botsandroid.ActivityProfile"
            android:parentActivityName="com.example.botsandroid.ActivityMain" 
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.botsandroid.Main" />
        </activity>
        
        <activity
            android:name="com.example.botsandroid.ActivityAchievements"
            android:parentActivityName="com.example.botsandroid.ActivityMain" 
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.botsandroid.Main" />
        </activity>
        
    </application>

</manifest>
