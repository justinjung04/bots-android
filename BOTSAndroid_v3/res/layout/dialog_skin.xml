<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/dialog_skin_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="15dp" />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
        
        <ImageView
	        android:id="@+id/dialog_skin_image_tank"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_margin="5dp"
	        android:contentDescription="@string/imageview" />
        
        <ImageView
	        android:id="@+id/dialog_skin_image_bomb"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_margin="5dp"
	        android:contentDescription="@string/imageview" />
        
        <ImageView
	        android:id="@+id/dialog_skin_image_coin"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_margin="5dp"
	        android:contentDescription="@string/imageview" />
        
    </LinearLayout>
    
    <TextView 
        android:id="@+id/dialog_skin_text_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:textSize="15sp" />
    
    <TextView 
        android:id="@+id/dialog_skin_text_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:textSize="15sp"/>
    
    <LinearLayout 
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/dialog_skin_button_cancel"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/cancel"
	        android:onClick="onButtonClick"/>
        
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/dialog_skin_button_apply"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" 
	        android:onClick="onButtonClick"/>
        
    </LinearLayout>
    
</LinearLayout>
