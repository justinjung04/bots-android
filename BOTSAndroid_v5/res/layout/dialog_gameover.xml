<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/dialog_gameover_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_margin="15dp"
        android:text="@string/game_over" />

	<TextView 
        android:id="@+id/dialog_gameover_text_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15sp" />
	
	<TextView 
        android:id="@+id/dialog_gameover_text_coins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp" />
	
	<TextView 
        android:id="@+id/dialog_gameover_text_achievements"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:textSize="15sp" />

	<LinearLayout 
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/dialog_gameover_button_home"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:text="@string/home"
	        android:onClick="goToMain"/>
        
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/dialog_gameover_button_share"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" 
	        android:text="@string/share"
	        android:onClick="shareScore"/>
        
        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/dialog_gameover_button_retry"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1" 
	        android:text="@string/retry"
	        android:onClick="restartGame"/>
        
    </LinearLayout>	
    
</LinearLayout>
